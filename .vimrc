" == Visual ==========================
set number
set ruler
set hlsearch
set nowrap

set laststatus=2
set statusline=[FILE=%F]%=[ENC=%{&fileencoding}][ROW=%l/%L]

" == Encoding ========================
set encoding=utf-8
set fileencoding=utf-8
set fileencodings=utf-8

" == Indent ==========================
set smartindent
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

